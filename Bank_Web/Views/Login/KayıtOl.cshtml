<body style="background-color: #999999;">

    <div class="limiter">
        <div class="container-login100">
            <div class="login100-more" style="background-image: url('../../Content/Login/images/bg-01.jpg');"></div>

            <div class="wrap-login100 p-l-50 p-r-50 p-t-72 p-b-50">
                <form class="login100-form validate-form">
                    <span class="login100-form-title p-b-59">
                        Kayıt Ol
                    </span>


                    <div class=" col-lg-6 ">

                        <div class="wrap-input100 validate-input" data-validate="Name is required">
                            <span class="label-input100">Ad *</span>
                            <input class="input100" id="ad" pattern="[a-zA-Z-]" title="sfsfsd" type="text" name="Ad" placeholder="Ad...">
                            <span class="focus-input100"></span><div id="uyari2"></div>
                        </div>

                    </div>
                    <div class=" col-lg-6">
                        <div class="wrap-input100 validate-input" data-validate="Surname is required">
                            <span class="label-input100">Soyad *</span>
                            <input class="input100" id="soyad" type="text" name="Soyad" placeholder="Soyad...">
                            <span class="focus-input100"></span>
                        </div>
                    </div>


                    <div class="wrap-input100 validate-input" data-validate="Tc No is required">
                        <span class="label-input100">Tc Numarası *</span>
                        <input class="input100" id="tc" maxlength="11" type="text" name="TcNo" placeholder="Tc Numarası...">
                        <span class="focus-input100"></span><div id="uyari"></div>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                        <span class="label-input100">Email *</span>
                        <input class="input100" type="text" id="email" name="email" placeholder="Email addess...">
                        <span class="focus-input100"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Adress is required">
                        <span class="label-input100">Adres *</span>
                        <input class="input100" id="adres" type="text" name="Adres" placeholder="Adres...">
                        <span class="focus-input100"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Date Time is required">
                        <span class="label-input100">Doğum tarihi *</span>
                        <input class="input100" id="tarih" type="date" name="Tarih" placeholder="Doğum tarihi...">
                        <span class="focus-input100"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Tel is required">
                        <span class="label-input100">Telefon Numarası *</span>
                        <input class="input100" id="tel" type="text" maxlength="11" name="Telefon" placeholder="Telefon...">
                        <span class="focus-input100"></span><div id="mesaj"></div>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        <span class="label-input100">Password *</span>
                        <input class="input100" id="sifre" type="password" maxlength="8" name="pass" placeholder="*************">
                        <span class="focus-input100"></span>
                    </div>



                    <div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>
                            <button id="kayıtol" class="login100-form-btn">
                                Kayıt Ol
                            </button>
                        </div>


                    </div>
                </form>
            </div>
        </div>
    </div>

    <!--===============================================================================================-->
