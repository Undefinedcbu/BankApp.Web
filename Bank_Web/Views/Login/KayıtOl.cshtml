    <script src="~/Scripts/bootstrap.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script>
        $("#kayıtol").click(function () {
            var TCKN = $("#tc").val();
            var pass = $("#sifre").val();
            var ad = $("#ad").val();
            var soyad = $("#soyad").val();
            var dogumTarihi = $("#tarih").val();
            var telefonNumarasi = $("#tel").val();
            var adres = $("#adres").val();
            var email = $("#email").val();

            $.ajax({
                type: "POST",
                url: "https://bankappapi.azurewebsites.net/api/Musteri",
                data: {
                    TcKimlik: TCKN,
                    Ad: ad,
                    Soyad: soyad,
                    DogumTarihi: dogumTarihi,
                    Adres: adres,
                    Telefon: telefonNumarasi,
                    Email: email,
                    Parola: pass,
                },
                dataType: 'json',
                crossDomain: true,
                contentType: 'application/json',
                success: function () {

                    alert("Başarılı");
                },
                error: function (err) {
                    alert(err);
                }
            });
        });
    </script>

    <script>

        $(document).ready(function () {
            $("#ad").keypress(function (evt) {
                var charCode = (evt.which) ? evt.which : event.keyCode

                if (((charCode <= 93 && charCode >= 65) || (charCode <= 122 && charCode >= 97) || charCode == 8) || charCode == 350 || charCode == 351 || charCode == 304 || charCode == 286 || charCode == 287 || charCode == 231 || charCode == 199 || charCode == 305 || charCode == 214 || charCode == 246 || charCode == 220 || charCode == 252) {
                    return true;
                }
                return false;
            });
            $("#soyad").keypress(function (evt) {
                var charCode = (evt.which) ? evt.which : event.keyCode

                if (((charCode <= 93 && charCode >= 65) || (charCode <= 122 && charCode >= 97) || charCode == 8) || charCode == 350 || charCode == 351 || charCode == 304 || charCode == 286 || charCode == 287 || charCode == 231 || charCode == 199 || charCode == 305 || charCode == 214 || charCode == 246 || charCode == 220 || charCode == 252) {
                    return true;
                }
                return false;
            });
            $("#tel").keypress(function (evt) {
                var charCode = (evt.which) ? evt.which : event.keyCode

                if (charCode >= 48 && charCode <= 57) {
                    return true;
                }
                return false;
            });
            $("#tc").keypress(function (evt) {
                var charCode = (evt.which) ? evt.which : event.keyCode

                if (charCode >= 48 && charCode <= 57) {
                    return true;
                }
                return false;
            });
        });
    
         var nesne = document.getElementById("tc");
         var uyari = document.getElementById("uyari");
         nesne.onkeypress = function () {
             uyari.textContent = "";
         }
         nesne.onblur = function () {
             try {
                 if (nesne.value.length < 11) throw "11 karakterden az girdiniz.";
             }
             catch (e) {
                 uyari.textContent = e;
                 nesne.focus();
             }
         }
     
         var nesne1 = document.getElementById("tel");
         var uyari1 = document.getElementById("mesaj");
         nesne1.onkeypress = function () {
             uyari1.textContent = "";
         }
         nesne1.onblur = function () {
             try {
                
                 if (nesne1.value.length < 11) throw "11 karakterden az girdiniz.";  
             }
             catch (e) {
                 uyari1.textContent = e;
                 nesne1.focus();
             }
         }
     </script>

