    <script type="text/javascript">
        $(function () {

            var isSuccess = false;

            $("#btnGiris").click(function () {
                var TCKN = $("#tc").val();
                var pass = $("#sifre").val();

                var data = {
                    TCKimlik: TCKN,
                    parola: pass,
                };
                $.ajax({
                    type: 'POST',
                    url: "https://bankappapi.azurewebsites.net/api/musteri?TCKimlik=" + TCKN + "&parola=" + pass,
                    data: JSON.stringify(data),
                    dataType: 'jsonp',
                    crossDomain: true,

                    contentType: 'application/json',

                    success: function (gdata) {

                        if (gdata != "") {
                            isSuccess = true;
                        }

                    },
                    complete: function () {

                        if (isSuccess) {

                            alert("başarılı giriş yaptınız...")

                        } else {

                            alert("hata oluştu. bilgilerinizi kontrol ederek tekrar deneyiniz!")

                        }

                        isSuccess = false;
                    }

                });

            })
        });

